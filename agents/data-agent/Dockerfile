FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app/package*.json ./
COPY --from=builder /app/dist ./dist

RUN npm ci --omit=dev

ENV NODE_ENV=production
ENV SERVICE_PORT=9302

EXPOSE 9302

CMD ["node", "dist/index.js"]
